<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Student Management</h1>

        <form id="taskForm" action="/add" method="POST">
            <input type="text" name="name" placeholder="Name">
            <input type="number" name="age" placeholder="Age">
            <input type="text" name="grade" placeholder="Grade">
            <input type="email" name="email" placeholder="Email">
            <p class="error" id="formError" style="color: red; display: none;"></p>
            <button type="submit">Add Student</button>
        </form>

        <h2>All Students</h2>
        <ul>
            <% students.forEach(student => { %>
                <li>
                    <strong><%= student.name %></strong> <%= student.age %> years old, Grade: <%= student.grade %>, Email: <%= student.email %>
                    <form action="/edit/<%= student._id %>" method="get" style="display:inline;">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            const taskForm = document.getElementById('taskForm');
            taskForm.addEventListener('submit',function (event) {
                if(!validateForm(taskForm)){
                    event.preventDefault();
                }
            });
            function validateForm(form) {
                const name = form.querySelector('input[name="name"]')
                const age = form.querySelector('input[name="age"]')
                const email = form.querySelector('input[name="email"]');
                const grade = form.querySelector('input[name="grade"]');
                const errorElement = form.querySelector('.error');

                // Reset previous errors
                errorElement.style.display = 'none';

                if (!name.value.trim()) {
                    errorElement.textContent = 'Name is required.';
                    errorElement.style.display = 'block';
                    return false;
                }
                if (!age.value.trim()) {
                    errorElement.textContent = 'Age is required.';
                    errorElement.style.display = 'block';
                    return false;
                }
                if(!grade.value.trim()){
                    errorElement.textContent = 'Grade is required'
                    errorElement.style.display = 'block';
                    return false
                }
                if (email && !validateEmail(email.value.trim())) {
                    errorElement.textContent = 'Invalid email format.';
                    errorElement.style.display = 'block';
                    return false;
                }
                return true
            }
            function validateEmail(email) {
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailPattern.test(email);
            }
        })
        
    </script>
</body>
</html>
