<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Student Management</h1>

        <form action="/add" method="POST">
            <input type="text" name="name" placeholder="Name" required>
            <input type="number" name="age" placeholder="Age" required>
            <input type="text" name="grade" placeholder="Grade" required>
            <input type="email" name="email" placeholder="Email" required>
            <button type="submit">Add Student</button>
        </form>

        <h2>All Students</h2>
        <ul>
            <% students.forEach(student => { %>
                <li>
                    <strong><%= student.name %></strong> <%= student.age %> years old, Grade: <%= student.grade %>, Email: <%= student.email %>
                    <form action="/edit/<%= student._id %>" method="get" style="display:inline;">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
